<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.tmobile.ct</groupId>
		<artifactId>codeless</artifactId>
		<version>0.0.11</version>
	</parent>
	<groupId>com.tmobile.ct.codeless</groupId>
	<artifactId>codeless_test</artifactId>

	<dependencies>
		<dependency>
			<groupId>com.tmobile.ct.codeless</groupId>
			<artifactId>codeless_core</artifactId>
			<version>0.0.11</version>
		</dependency>

		<dependency>
			<groupId>com.tmobile.ct.codeless</groupId>
			<artifactId>codeless_service</artifactId>
			<version>0.0.11</version>
		</dependency>

		<dependency>
			<groupId>com.tmobile.ct.codeless</groupId>
			<artifactId>codeless_ui</artifactId>
			<version>0.0.11</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.7</version>
		</dependency>

		<dependency>
			<groupId>com.relevantcodes</groupId>
			<artifactId>extentreports</artifactId>
			<version>2.41.2</version>
		</dependency>
		
		<!-- Wiremock for Unit Tests -->
        <dependency>
          	<groupId>com.github.tomakehurst</groupId>
            <artifactId>wiremock</artifactId>
            <version>2.19.0</version>
            <scope>test</scope>
       	</dependency>
		
       	<dependency>
   			<groupId>com.google.guava</groupId>
    		<artifactId>guava</artifactId>
    		<version>22.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.20</version>
				<configuration>
					<!-- Sets the VM argument line used when unit tests are run. -->
					<!-- <argLine>${surefireArgLine}</argLine> -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<archive>
								<manifest>
									<mainClass>
										com.tmobile.ct.codeless.test.testng.MainTest
									</mainClass>
								</manifest>
							</archive>
							<finalName>codeless</finalName>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
							<outputDirectory>../example_usage/lib/</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
